@{
}
@model Ngo.Models.DonationI

@{
    ViewData["Title"] = "Create";
}
@using Ngo.Models.Enums
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<h1>Donate</h1>

<h4></h4>
<hr />
<div style="background-image:url('https://www.classy.org/wp-content/uploads/2022/07/blog_15-ways-to-thanks-donors_header-1224x612.jpg')">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="text-white" asp-for="DonarName" class="control-label"></label>
                <input asp-for="DonarName" class="form-control" />
                <span asp-validation-for="DonarName" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label class="text-white" asp-for="Email" class="control-label"></label>
                <input asp-for="Email" value="@UserManager.GetUserName(User)" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label class="text-white" asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label class="text-white" asp-for="DonationAmount" class="control-label"></label>
                <input asp-for="DonationAmount" class="form-control" />
                <span asp-validation-for="DonationAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label class="text-white" asp-for="CampaignId" class="control-label"></label>
                   <select asp-for="CampaignId" class="form-control" asp-items="ViewBag.CampaignId"></select>
                @*                <input type="text" asp-for="CampaignId" value="@ViewBag.CampaignId" /> *@
               @* <input type="text" id="CampaignId" maxlength="4" size="4" name="CampaignId" value="@ViewBag.CampaignId" readonly="readonly" />
                <br />
                <br />
                <input type="text" size="30" value="@ViewBag.CampaignName" readonly="readonly" />*@
            </div>
            <div class="form-group">
                <input type="submit" value="Donate" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
</div>
